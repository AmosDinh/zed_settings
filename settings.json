// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "vim_mode": false,
  "base_keymap": "VSCode",
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "Consolas, 'Courier New', monospace",
  "cursor_blink": false,

  // "theme": {
  //   "mode": "system",
  //   "light": "One Light",
  //   "dark": "One Light"
  //  }
  //
  "theme": "One Light",
  "experimental.theme_overrides": {
    //"error": "#e5c07b",
    "element.hover": "#add6ff80",
    "editor.background": "#ffffff",
    "editor.document_highlight.read_background": "#EBEBEC", //f3f3f3
    "editor.document_highlight.write_background": "#ffffff", //"#EBEBEC",
    "editor.active_line.background": "#ffffff",
    "editor.gutter.background": "#ffffff",
    "editor.subheader.background": "#ffffff",
    "editor.line_number": "#237893",
    "editor.active_line_number": "#0b216f",
    "search.match_background": "ffffff",
    "toolbar.background": "#ffffff",
    "tab.active_background": "#ffffff",
    "search.match_background": "#ea5c0038",

    //"tab_bar.background": "#232634",
    "syntax": {
      "keyword": {
        "color": "#0000FF" // Blue for keywords like "in", "not", "while", "for", "None", "self"
      },
      "string": {
        "color": "#A31515" // Brown/reddish for strings
      },
      "string.special.symbol": {
        "color": "#0000FF" // Blue for `f` and `{}` in f-strings
      },
      "number": {
        "color": "#008000" // Green for numbers
      },
      //"boolean": {
      // blue
      //  "color": "#0000FF"
      //},
      "comment": {
        "color": "#008000", // Green for comments
        "font_style": "italic"
      },
      "punctuation.bracket": {
        "color": "#0000FF" // Blue for parentheses/brackets
      },
      "punctuation.bracket.nested": {
        "color": "#FF4500" // Orange for nested brackets
      },
      "function": {
        "color": "#000000" // Black for function names
      },
      "type": {
        "color": "#000000" // Black for class names
      },
      "attribute": {
        "color": "#000000" // Black for attributes
      },
      "operator": {
        "color": "#000000" // Black for operators (=, +, -, *)
      },
      "predictive": {
        "color": "#e5c07b" // Yellow for unresolved package underline
        //"font_style": "underline"
      },

      "property": {
        "color": "#000000"
      },

      "constant": {
        // for None
        "color": "#0000FF"
      }
    }
  }
}
